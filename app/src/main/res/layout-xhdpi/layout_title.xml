<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48.0dip"
    android:background="@color/bar_color" >
    
    <ImageButton
        android:id="@+id/ib_exit_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_exit_02"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginLeft="8dp"/>
    <View
        android:id="@+id/vertical_line"
        android:layout_width="1dp"
        android:layout_height="30dp"
        android:background="#000"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:layout_toRightOf="@id/ib_exit_01"/>

    <TextView
        android:id="@+id/title_tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/txt_titleStyle1"
        android:layout_toRightOf="@id/vertical_line"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:text="@string/findIdAndPassword"/>
    <TextView
        android:id="@+id/title_tv_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/txt_titleStyle1"
        android:layout_toRightOf="@id/vertical_line"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:text="@string/app_name"/>

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_enable_green"
        android:enabled="false"
        android:paddingBottom="3dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="3dp"
        android:text="确定"
        android:textColor="@android:color/white"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:textSize="10sp"
        android:visibility="gone"/>
    <ImageButton
        android:id="@+id/ib_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_camera"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginLeft="8dp"/>
</RelativeLayout>